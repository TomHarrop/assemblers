Bootstrap: docker
From: ubuntu:18.10

%help
    Flye 2.6
    https://github.com/fenderglass/Flye

%labels
    MAINTAINER "Tom Harrop"
    VERSION "Flye 2.6"

%post
    # deps
    apt-get clean
    apt-get update
    apt-get install -y \
        build-essential \
        python3 \
        python3-setuptools \
        wget \
        zlib1g-dev

    # install flye
    mkdir Flye
    wget -O "Flye.tar.gz" \
        --no-check-certificate \
        https://github.com/fenderglass/Flye/archive/2.6.tar.gz
    tar -zxf Flye.tar.gz \
        -C Flye \
        --strip-components 1

    cd Flye || exit 1
    python3 setup.py install
    cd .. || exit 1
    rm -r Flye.tar.gz Flye

%environment
    export LC_ALL="C"

%runscript
    exec /usr/local/bin/flye "$@"
